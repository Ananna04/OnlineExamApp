<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbck"
    tools:context=".Questions_layout">


    <TextView
        android:id="@+id/scoreId"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffe"
        android:textSize="24dp"
        android:text="Score : "
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/questionId"
        android:textColor="#ffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:text="Question"
        android:textAlignment="center"
        android:paddingBottom="40dp"
        />
    <Button
        android:id="@+id/answer_1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Answer 1"
        android:layout_marginBottom="10dp"
        android:background="#659190"
        android:textColor="#ffe"
        />
    <Button
        android:id="@+id/answer_2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Answer 2"
        android:layout_marginBottom="10dp"
        android:background="#659190"
        android:textColor="#ffe"
        />
    <Button
        android:id="@+id/answer_3_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Answer 3"
        android:layout_marginBottom="10dp"
        android:background="#659190"
        android:textColor="#ffe"
        />
    <Button
        android:id="@+id/answer_4_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Answer 4"
        android:layout_marginBottom="10dp"
        android:background="#659190"
        android:textColor="#ffe"
        />


</LinearLayout>